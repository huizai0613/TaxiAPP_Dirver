<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bj_bule" >

    <View
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dirver_registerstart_bj" />

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <EditText
                android:id="@+id/edit_mobileNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mobilenum_in"
                android:hint="请输入手机号,方便乘客与您联系"
                android:inputType="number"
                android:paddingLeft="5dip"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_mobile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/a"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mobilenum_in"
                android:hint="************"
                android:inputType="textPassword"
                android:paddingLeft="5dip"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_pwd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/b"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <EditText
                android:id="@+id/edit_re_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mobilenum_in"
                android:hint="************"
                android:inputType="textPassword"
                android:paddingLeft="5dip"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_re_pwd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c"
        android:layout_marginTop="30dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/but_back"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_register_start_back_string" />

        <TextView
            android:id="@+id/but_next"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/but_back"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_register_start_next_string" />
    </LinearLayout>

</RelativeLayout>