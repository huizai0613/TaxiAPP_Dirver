<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/com_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/content_background"
        android:orientation="vertical"
        android:paddingBottom="4dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="2dip" >

        <RelativeLayout
            android:id="@+id/setting_myComment"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/setting_item"
            android:clickable="true"
            android:onClick="clickSetting"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:text="@string/_settingactivity_settingOne"
                android:textColor="@color/setting_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/country_code_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/setting_updatePhone"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/setting_item"
            android:clickable="true"
            android:onClick="clickSetting"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:text="@string/_settingactivity_settingTwo"
                android:textColor="@color/setting_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/country_code_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/setting_updatePwd"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/setting_item"
            android:clickable="true"
            android:onClick="clickSetting"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:text="@string/_settingactivity_settingThree"
                android:textColor="@color/setting_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/country_code_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/setting_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/setting_item"
            android:clickable="true"
            android:onClick="clickSetting"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:text="@string/_settingactivity_settingFour"
                android:textColor="@color/setting_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/country_code_arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>