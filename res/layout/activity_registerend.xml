<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bj_bule" >

    <View
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dirver_registerend_bj" />

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mobilenum_in"
                android:hint="请输入您的姓名"
                android:paddingLeft="5dip"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/a"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/edit_date"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mobilenum_in"
                android:hint="请输入出生年月"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_brichday" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_below="@id/b"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:id="@+id/mobilenum"
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:background="@drawable/mobilenum_out"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <RadioGroup
                android:id="@+id/sexy_rd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/sexy_male"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:button="@drawable/radio_but"
                    android:text="男"
                    android:textColor="#91b4d0"
                    android:textSize="10dip" />

                <RadioButton
                    android:id="@+id/sexy_female"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dip"
                    android:button="@drawable/radio_but"
                    android:text="女"
                    android:textColor="#91b4d0"
                    android:textSize="10dip" />
            </RadioGroup>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:src="@drawable/ic_mobile"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/whell"
        android:layout_width="fill_parent"
        android:layout_height="157dip"
        android:layout_below="@id/c"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="250dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal" >

            <com.iss.view.wheel.WheelView
                android:id="@+id/wheel_province"
                android:layout_width="0dip"
                android:layout_height="157dip"
                android:layout_marginRight="0.5dip"
                android:layout_weight="1" />

            <com.iss.view.wheel.WheelView
                android:id="@+id/wheel_city"
                android:layout_width="0dip"
                android:layout_height="157dip"
                android:layout_marginLeft="0.5dip"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/mobilenum"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whell"
        android:layout_marginTop="20dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/but_back"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_register_start_back_string" />

        <TextView
            android:id="@+id/but_next"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/but_back"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_register_end_ok_string" />
    </LinearLayout>

</RelativeLayout>