<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/snatch_order_num"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_ordernum"
            android:gravity="right"
            android:paddingRight="5dip"
            android:paddingTop="5dip"
            android:textColor="#ffffff"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/snatch_order_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/_listitem_snatch_text3"
                    android:textColor="#fe6102"
                    android:textSize="12dip" />
            </LinearLayout>

            <View
                android:layout_width="0.2dip"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="5dip" >

                <TextView
                    android:id="@+id/snatch_go_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="5dip"
                    android:textColor="#454545"
                    android:textSize="12dip" />
            </LinearLayout>

            <Button
                android:id="@+id/snatch_snatchOrder"
                android:layout_width="50dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rating_but_bg"
                android:text="@string/_listitem_snatch_text2"
                android:textColor="#2d2d2d"
                android:textSize="12dip" />

            <View
                android:id="@+id/snatch_phone"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:background="@drawable/ic_snatch_phone"
                android:padding="10dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>